generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id              String           @id @default(uuid())
  name            String
  sessions        Session[]
  currentSessions CurrentSession[]   
  createdAt       DateTime         @default(now())
}

model Session {
  id          String    @id @default(uuid())
  categoryId  String?   // теперь может быть null
  category    Category? @relation(fields: [categoryId], references: [id])
  startTime   DateTime
  endTime     DateTime
  durationSec Int
  createdAt   DateTime  @default(now())
}

model CurrentSession {
  id         String   @id @default(uuid())
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
  startTime  DateTime
  createdAt  DateTime @default(now())
}